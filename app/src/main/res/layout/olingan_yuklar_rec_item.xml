<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txtOlinganYukOrderNumber"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="#"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtOlinganKlient"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="Klient"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtOlinganShakarTuri"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="Shakar Turi"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtOlinganSana"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="Sana"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtOlinganYukMiqdori"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="Yuk miqdori"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtOlinganBirlikNarx"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="Birlik Narx"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/txtOlinganUmumiyNarx"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:paddingStart="2dp"
            android:text="Umumiy Narx"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <LinearLayout
            android:id="@+id/actionLayout"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/actionTextview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingStart="2dp"
                android:text="Action"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imgOlinganKorish"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/ic_korish" />

            <ImageView
                android:id="@+id/imgOlinganTahrirlash"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/ic_tahrirlash" />

            <ImageView
                android:id="@+id/imgOlinganOchirish"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/ic_ochirish" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>